<div id="<%= dom_id recommend %>">

  <p>
    <strong>Friend:</strong>
    <%= recommend.friendship.friend.first_name %> <%= recommend.friendship.friend.last_name %>
  </p>
  <%= link_to show_path(recommend.show) do %>
  <%= image_tag("https://image.tmdb.org/t/p/w500/#{recommend.show.poster_path}", class: "object-contain h-80 w-120")%>
  <% end %>
  <p>
    <strong>Original language:</strong>
    <%= recommend.show.original_language %>
  </p>

  <p>
    <strong>Original name:</strong>
    <%= recommend.show.original_name %>
  </p>
  <p>
    <strong>Name:</strong>
    <%= recommend.show.name %>
  </p>

  <p>
    <strong>Overview:</strong>
    <%= recommend.show.overview %>
  </p>

  <% if action_name == 'show' %>
    <h2>Chat</h2>
  <p>Chat here:"</p>
    <%= render 'chats/form', locals: { chat: @recommend.chats.build } %>
  <% end %>
</div>
