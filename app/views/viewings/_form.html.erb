<%= form_with(model: viewing) do |form| %>
  <% if viewing.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(viewing.errors.count, "error") %> prohibited this viewing from being saved:</h2>

      <ul>
        <% viewing.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :status, "Not Started", style: "display: block" %>
    <%= form.radio_button :status, 'not_started' %>
  </div>
  <div>
    <%= form.label :status, "Watching", style: "display: block" %>
    <%= form.radio_button :status, 'watching' %>
  </div>
  <div>
    <%= form.label :status, "On Hold", style: "display: block" %>
    <%= form.radio_button :status, 'on_hold' %>
  </div>
  <div>
    <%= form.label :status, "Finished", style: "display: block" %>
    <%= form.radio_button :status, 'finished' %>
  </div>

  <div>
    <%= form.label :note, "Personal Note", style: "display: block" %>
    <%= form.text_area :note, class: "block w-full p-4 text-gray-900 border border-gray-300 rounded-lg bg-gray-50
    sm:text-md focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600
    dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
  </div>
  <% if action_name == 'new' %>
  <div>
    <%= form.hidden_field :tmdb_id, value: params[:tmdb_id].to_i %>
  </div>
  <% end %>
  <div>
    <%= form.submit "Add/Update Show", class: "text-white bg-pink-700 hover:bg-pink-800 focus:ring-4 focus:ring-pink-300 font-medium rounded-lg
                        text-sm px-5 py-2.5 my-3 dark:bg-pink-600 dark:hover:bg-pink-700 focus:outline-none dark:focus:ring-pink-800" %>
  </div>
<% end %>
