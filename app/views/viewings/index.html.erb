<h1 class="font-bold block mb-4 text-2xl text-pink-500">Shows People are Watching</h1>

<div id="viewings" class="grid gap-4 sm:grid-cols-1 md:grid-cols-3 lg:grid-cols-4">
  <% @viewings.each do |viewing| %>
    <div class="m-2">
    <%= render viewing %>
    <p>
      <%= link_to "Show this viewing", viewing, class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4
      focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 my-3 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
    </p>
    </div>
  <% end %>
</div>

