<%= form_with(model: review) do |form| %>
  <% if review.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
        <% review.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div>
      <%= form.label :rating, "Rating: 0-5 Stars" ,style: "display: block" %>
      <%= form.number_field :rating, in: 0..5, class: "mb-3 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5
      dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
    </div>
    <div class="mb-3">
      <%= form.label :recommend, "Would you recommend this show to people?", class: "font-bold" %>
    <div>
      <%= form.label :recommend, "No Judgement", style: "display: block" %>
      <%= form.radio_button :recommend, 'no_judgement' %>
    </div>
    <div>
      <%= form.label :recommend, "No", style: "display: block" %>
      <%= form.radio_button :recommend, 'no' %>
    </div>
    <div>
      <%= form.label :recommend, "Maybe", style: "display: block" %>
      <%= form.radio_button :recommend, 'maybe' %>
    </div>
    <div>
      <%= form.label :recommend, "Yes", style: "display: block" %>
      <%= form.radio_button :recommend, 'yes' %>
    </div>
  </div>
  <div>
    <%= form.label :content, "Review:", style: "display: block" %>
    <%= form.text_area :content, class: "block w-full p-4 text-gray-900 border border-gray-300 rounded-lg bg-gray-50
    sm:text-md focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700
    dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
  </div>
  <% if action_name == 'new' %>
  <div>
    <%= form.hidden_field :viewing_id, value: params[:viewing_id].to_i %>
  </div>
  <div>
    <%= form.hidden_field :tmdb_id, value: params[:tmdb_id].to_i %>
  </div>
  <% end %>
  <div>
    <%= form.submit class: "inline-block text-white bg-pink-700 hover:bg-pink-800 focus:ring-4 focus:ring-pink-300 font-medium rounded-lg
                        text-sm px-5 py-2.5 my-3 dark:bg-pink-600 dark:hover:bg-pink-700 focus:outline-none dark:focus:ring-pink-800 mr-4" %>
  </div>
<% end %>
