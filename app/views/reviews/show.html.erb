<%= link_to "Back to reviews", reviews_path, class: "text-white bg-pink-700 hover:bg-pink-800 focus:ring-4
      focus:ring-pink-300 font-medium rounded-lg text-sm px-5 py-2.5 my-3 dark:bg-pink-600 dark:hover:bg-pink-700 focus:outline-none dark:focus:ring-pink-800" %>
<%= render @review %>
<% if user_signed_in? && @review.user == current_user %>
<div>
  <%= link_to "Edit this review", edit_review_path(@review), class: "text-white bg-pink-700 hover:bg-pink-800 focus:ring-4
      focus:ring-pink-300 font-medium rounded-lg text-sm px-5 py-2.5 my-4 dark:bg-pink-600 dark:hover:bg-pink-700 focus:outline-none dark:focus:ring-pink-800" %>


  <%= button_to "Destroy this review", @review, method: :delete, class: "text-white bg-pink-700 hover:bg-pink-800 focus:ring-4
      focus:ring-pink-300 font-medium rounded-lg text-sm px-5 py-2.5 my-3 dark:bg-pink-600 dark:hover:bg-pink-700 focus:outline-none dark:focus:ring-pink-800" %>
</div>
<% end %>
