<div>
<div class="mb-5">
  <ul>
    <li><%# season %></li>
    <%= image_tag("https://image.tmdb.org/t/p/w500#{@data['poster_path']}", class: "object-contain h-80 w-120")%>
    <li>Season Number: <%= @data['season_number'] %></li>
    <li>Episode Count: <%= @data['episode_count']%></li>
    <li>Air Date: <%= @data['air_date'] %></li>
    <li>Season Overview: <%= raw @data['over_view'] %></li>
  </ul>
</div>
<% if @data != nil %>
  <div class="mb-2">
    <% @data['episodes'].each do |episode| %>
      <div class="mb-2">
        <ul>
          <li>Episode Number: <%= episode['episode_number'] %></li>
          <li>Episode Name: <%= episode['name'] %></li>
          <li>Runtime: <%= episode['runtime'] %> minutes</li>
          <li>Air date: <%= episode['air_date'] %></li>
          <li>Overview <%= episode['overview'] %></li>
        </ul>
        <hr>
      </div>

    <% end %>
  <% end %>
  </div>
  <div>
    <p>We had some trouble pulling the episode data. Try again later!</p>
  </div>
</div>